#upper case  lower case
a = "Hello, World!"
print(a.upper())
a = "Hello, World!"
print(a.lower())
a = " Hello,   World! "
print(a.strip())#Remove Whitespace
a = "Hello, World!"
print(a.replace("H", "J"))# relace number
a = "Hello, World!"
print(a.split(" ")) # returns ['Hello', ' World!']
