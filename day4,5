# Initialize total sum
total = 0

# Infinite loop until user enters a negative number
while True:
    num = int(input("Enter a number (enter a negative number to exit): "))
    if num < 0:
        break  # Exit the loop if a negative number is entered
    total += num  # Add the entered number to the total sum

# Print the sum
print("Sum of the numbers entered:", total)
while True:
    num = int(input("Enter a number (enter a negative number to exit): "))
    if num < 0:
        break  # Exit the loop if a negative number is entered
    print("You entered:", num)
